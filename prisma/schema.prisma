// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Profile {
  id             String   @id @default(cuid())
  name           String
  bio            String?
  email          String
  profession     String?  // Nghề nghiệp
  province       String?  // Tỉnh thành
  schoolOrCompany String? // Tên trường hoặc công ty
  gender         String?  // Giới tính
  age            Int?     // Tuổi
  phone          String?  // Số điện thoại
  github         String?
  linkedin       String?
  twitter        String?
  facebook       String?
  youtube        String?
  tiktok         String?
  website        String?
  avatar         String?
  logo           String?  // Logo cố định tên
  backgroundMusic String?
  enableBackgroundMusic Boolean @default(true)
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}

model Project {
  id          String   @id @default(cuid())
  title       String
  description String
  image       String?
  url         String?
  githubUrl   String?
  techStack   String?  // JSON string or comma-separated
  featured    Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
